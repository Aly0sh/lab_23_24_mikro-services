<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <title>Students</title>
</head>
<body>
<h2>Students</h2>
<table class="table">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Full name</th>
        <th scope="col">Age</th>
        <th scope="col">Course</th>
        <th scope="col">Group</th>
        <th scope="col">Faculty</th>
        <th scope="col">Operations</th>
    </tr>

    {{#students}}
        <tr>
            <td scope="row">{{id}}</td>
            <td>{{fullName}}</td>
            <td>{{age}}</td>
            <td>{{course}}</td>
            <td>{{group}}</td>
            <td>{{faculty.name}}</td>
            <td>
                <form action="/student/delete/{{id}}" method="post" class="btn-group" role="group">
                    <a href="/student/update/{{id}}" class="btn btn-success">Update</a>
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    {{/students}}
</table>
<p class="text-center">
    <a href="/student/create" class="btn btn-primary mt-5">Add student</a>
</p>
</body>
</html>
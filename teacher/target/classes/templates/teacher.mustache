<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <title>Teachers</title>
</head>
<body>
<h2>Teachers</h2>
<table class="table">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Full name</th>
        <th scope="col">Age</th>
        <th scope="col">Salary</th>
        <th scope="col">Subject</th>
        <th scope="col">Operations</th>
    </tr>

    {{#teachers}}
        <tr>
            <td scope="row">{{id}}</td>
            <td>{{fullName}}</td>
            <td>{{age}}</td>
            <td>{{salary}}</td>
            <td>{{subject}}</td>
            <td>
                <form action="/delete/{{id}}" method="post" class="btn-group" role="group">
                    <a href="/update/{{id}}" class="btn btn-success">Update</a>
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    {{/teachers}}
</table>
<p class="text-center">
    <a href="/create" class="btn btn-primary mt-5">Add teacher</a>
</p>
</body>
</html>